{
  "extends": "../../tsconfig.json",  // se vocÃª tiver um tsconfig na raiz
  "compilerOptions": {
    "outDir": "../../dist-electron",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["../../node_modules/@types", "../types"],
  },
  "include": ["*.ts", "../types/electron.d.ts"],
}
